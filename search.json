---
layout: null
permalink: /search.json
---
[
{% assign posts = site.posts | sort: 'date' | reverse %}
{% for post in posts %}
  {
    "title": {{ post.title | jsonify }},
    "url": {{ post.url | relative_url | jsonify }},
    "date": "{{ post.date | date: '%Y-%m-%d' }}",
    "description": {{ post.description | default: post.excerpt | strip_html | replace: '\n', ' ' | replace: '\r', ' ' | strip_newlines | jsonify }},
    "content": {{ post.content | strip_html | replace: '\n', ' ' | replace: '\r', ' ' | strip_newlines | jsonify }},
    "keywords": {{ post.keywords | default: post.tags | jsonify }}
  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]
